#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing Ghostscript 9.10"

BUILD_DIR=$1
PACKAGE="http://downloads.ghostscript.com/public/ghostscript-9.10.tar.gz"

mkdir -p $LOCATION
curl -O $PACKAGE -s

echo "-----> Building runtime environment for Ghostscript"

tar xzvf ghostscript-9.10.tar.gz
cd ghostscript-9.10
./configure --disable-cups --disable-gtk --with-drivers=FILES
make
cp bin/gs ~/bin

echo "Ghostscript version:"
echo gs --version

cd ~
rm -rf ghostscript-9.10*
